<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ImageView
        android:id="@+id/mLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/mlogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>


    <TextView
        android:id="@+id/noItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mLogo"
        android:text="NO ITEMS"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/selectItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noItems"
        android:text="You haven`t selected any Categories yet"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textAlignment="center"
        />


    <Button
        android:id="@+id/btnBackCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:text="GO BACK"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/round_rect_orange"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"

        />
</RelativeLayout>